<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="at.xidev.bikechallenge.view.FragmentDrive"
    android:orientation="vertical"
    android:background="#AEFF99"
    >

    <!--<TextView
        android:id="@+id/section_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_section_drive"/> -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/tracking_view"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#ffffffff"
        android:visibility="gone" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="35dp"
                android:layout_weight="1"
                android:text="@string/distance"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="35dp"
                android:layout_weight="1"
                android:text="@string/time"/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="@string/speed"/>

            <TextView
                android:id="@+id/tv_avspeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="@string/avspeed"/>

        </LinearLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_co2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="@string/co2saved"/>

            <TextView
                android:id="@+id/tv_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="25dp"
                android:layout_weight="1"
                android:text="@string/points"/>

        </LinearLayout>


        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_weight="1"
            tools:layout="@layout/abc_simple_decor" />
        <!-- android:layout_height="260dp" -->

    </LinearLayout>



    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/start_view"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="visible" >

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:background="#ffffffff"
            android:paddingBottom="10dp" >

            <ImageView
                android:id="@+id/iv_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:scaleType="fitStart"
                android:gravity="left"
                android:layout_weight="1"
                android:src="@drawable/ic_action_person"
                android:paddingBottom="10dp" />

            <TextView
                android:id="@+id/tv_userpoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="35dp"
                android:layout_weight="1"
                android:text="0 points"
                android:paddingBottom="10dp" />

        </LinearLayout>



        <TextView
            android:id="@+id/tv_lastachievements"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="Last Achievements"
            android:background="#ffffffff" />

        <TextView
            android:id="@+id/tv_challenges"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:gravity="center_horizontal"
            android:textSize="15dp"
            android:layout_weight="1"
            android:text="Challenges"
            android:background="#ffffffff" />


    </LinearLayout>




    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

    <Button
        android:id="@+id/button_start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:text="@string/start"
        android:background="@drawable/green_button"
        style="@style/button_text"
        android:layout_weight="1"
        android:onClick="startButtonMain" />
    <!--<Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:text="Stop"
        android:background="@drawable/red_button"
        style="@style/button_text"
        android:layout_weight="1"
        android:onClick="stopButtonMain" /> -->

        </LinearLayout>






</LinearLayout>
