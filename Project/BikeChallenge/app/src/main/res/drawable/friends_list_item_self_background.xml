<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <gradient android:angle="90" android:startColor="@color/social_list_button_pressed" android:endColor="@color/social_list_button" android:type="linear" />
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/social_list_button" />
            <stroke android:width="2dp" android:color="@color/social_list_button_self_stroke" />
        </shape>
    </item>
</selector>